{
    "name": "sz32_rand_size_loc_fill_L8_q",
    "n_gpu": 1,
    
    "arch": {
        "type": "VAE_SMALL",
        "args": {
                 "latent_size" : 8,
                 "img_size": 32,
                 "in_channels": 1
        }
    },
    "data_loader": {
        "type": "make_gen_single_shape",
        "args":{
            "files_dict_loc": "/media/rene/data/hvae/shapes/sz32_rand_size_loc_fill/files_dict.pkl",
            "batch_size": 256,
            "num_workers": 4, 
            "img_size": 32
        }  
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "loss": {
        "type": "make_vae_loss",
        "args":{
            "KLD_weight": 0.25
        }
    },
    "metrics": [
        "BCE", "KLD"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.2
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "/media/rene/data/hvae/shapes",
        "save_period": 1,
        "verbosity": 1,
        "give_model_label": false,
        
        "monitor": "min val_loss",
        "early_stop": 20,
        
        "tensorboardX": true,
        "log_dir": "/media/rene/data/hvae/shapes"
    }
}
