{
    "name": "HVAE quarterL2KLD",
    "n_gpu": 1,
    
    "arch": {
        "type": "HVAE_2L",
        "args": {
                 "img_size" : 32,
                 "l2_latent_size": 10,
                 "l2_width": 64, 
                 "l2_input_size": 32, 
                 "l2_kernel_size": 8,
                 "l2_stride" : 4,
                 "l1_latent_size": 32,
                 "l1_width": 64,
                 "l1_input_size": 8}
    },
    "data_loader": {
        "type": "make_generators_MNIST",
        "args":{
            "files_dict_loc": "/media/rene/data/MNIST/files_df.pkl",
            "batch_size": 256, 
            "num_workers": 4, 
            "img_size": 32
        }  
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "loss": {
        "type": "make_hvae_loss",
        "args":{
            "L1_KLD_weight": 1,
            "L2_KLD_weight": 0.25
        }
    },
    "metrics": [
        "BCE_L2", "KLD_1d_L1", "KLD_2d_L2", "full_hvae_loss"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 15,
            "gamma": 0.2
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "/media/rene/data/hvae/quarterL2KLD",
        "save_period": 1,
        "verbosity": 1,
        "give_model_label": false,
        
        "monitor": "min val_loss",
        "early_stop": 15,
        
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
