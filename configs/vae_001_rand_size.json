{
    "name": "vae_001_rand_size",
    "n_gpu": 1,
    
    "arch": {
        "type": "VAE",
        "args": {
                 "latent_size" : 32,
                 "img_size": 32
        }
    },
    "data_loader": {
        "type": "make_gen_single_shape",
        "args":{
            "files_dict_loc": "/media/rene/data/hvae/shapes/sz32_rand_size/files_dict.pkl",
            "batch_size": 256,
            "num_workers": 4,
            "img_size": 32
        }  
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 5e-4
        }
    },

    "loss": {
        "type": "make_vae_loss",
        "args":{
            "KLD_weight": 1
        }
    },
    "metrics": [
        "BCE", "KLD"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.2
        }
    },
    "trainer": {
        "epochs": 500,
        "save_dir": "/media/rene/data/hvae/shapes_output",
        "save_period": 1,
        "verbosity": 1,
        "give_model_label": false,
        
        "monitor": "min val_loss",
        "early_stop": 200,
        
        "tensorboardX": true,
        "log_dir": "/media/rene/data/hvae/shapes_output"
    }
}
